{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
            "label": "Compile C++",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "revealProblems": "never",
                "close": false
            },
            "command": "g++ -std=c++17 -g ${file} -o ${fileDirname}/${fileBasenameNoExtension}.o",
            "problemMatcher": [{
                // "owner": "cpp",
                "base": "$gcc",
                "fileLocation": [
                    "absolute"
                ]
            }],
            "group": {
                "kind": "build",
                "isDefault": true,
            },
        },


        {
            "label": "Compile C",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "command": "gcc -g ${file} -o ${fileDirname}/${fileBasenameNoExtension}.o",
            "problemMatcher": [{
                // "owner": "c",
                "base": "$gcc",
                "fileLocation": [
                    "absolute"
                ]
            }],
            "group": "build"
            // "group": {
            //     "kind": "build",
            //     "isDefault": true
            // }
        },





        {
            "label": "Run C/C++",
            "type": "shell",
            "promptOnClose": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "command": "bash-console-runner-start -disable-nohup ${fileDirname}/./${fileBasenameNoExtension}.o",
            "group": "test",
            "linux": "true",
            // "options": {
            //     "shell": {
            //         "executable": "xterm",
            //         "args": [
            //             "-hold",
            //             "-e"
            //         ]
            //     },
            // },

        },

        
    ]
}