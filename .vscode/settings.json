{
    "files.associations": {
        "iostream": "cpp"
    },

    // settings for linux
    // "C_Cpp.intelliSenseEngine": "Disabled",
    // "C_Cpp.autocomplete": "Disabled",  // So you don't get autocomplete from both extensions.
    // "C_Cpp.errorSquiggles": "Disabled", // So you don't get error squiggles from both extensions (clangd's seem to be more reliable anyway).
    

    // settings for windows
    "C_Cpp.intelliSenseEngine": "Default",
    "C_Cpp.autocomplete": "Default",  // So you don't get autocomplete from both extensions.
    "C_Cpp.errorSquiggles": "Enabled", // So you don't get error squiggles from both extensions (clangd's seem to be more reliable anyway).

    // "clangd.path": "/usr/bin/clangd-13",
    // "clangd.arguments": [
    //     "-log=error",
    //     "-pretty",
    //     "--background-index",
    //     "--pch-storage=memory",
    //     "--completion-style=detailed",
    //     "--header-insertion=never",
    //     "-j=20"
    // ],
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorStyle": "line-thin",
    "editor.formatOnPaste": false,
    "explorer.sortOrder": "modified",
    "editor.cursorBlinking": "phase",
    "files.trimFinalNewlines": true,
    "window.title": "${activeEditorMedium}${separator}${rootName}",
    "workbench.editor.highlightModifiedTabs": true,
    "editor.acceptSuggestionOnEnter": "smart",
}
